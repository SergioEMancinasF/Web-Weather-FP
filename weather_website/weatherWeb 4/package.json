{
    "name": "weatherweb",
    "version": "1.0.0",
    "description": "Weather web application",
    "main": "index.js",
    "scripts": {
        "start": "php -S localhost:8000 -t .",
        "build": "echo 'Building the project...'",
        "lint": "eslint .",
        "format": "prettier --write ."
    },
    "author": "Top G",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.7.2"
    },
    "devDependencies": {
        "eslint": "^7.32.0",
        "prettier": "^2.4.1"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true
        },
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": 12,
            "sourceType": "module"
        },
        "rules": {
            "no-unused-vars": "warn",
            "no-console": "off"
        }
    },
    "prettier": {
        "singleQuote": true,
        "semi": true
    }
}
